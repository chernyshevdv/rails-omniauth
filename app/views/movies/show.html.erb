<h2><%= @movie.title %></h2>
<table class="table table-striped col-md-12" id="movie">
	<tbody>
		<tr>
			<td><b>Release date:</b></td>
			<td><%= @movie.year%></td>
		</tr>
		<tr>
			<td><b>Rating:</b></td>
			<td><%= @movie.rating %></td>
		</tr>
	</tbody>
</table>
<h3>Reviews:</h3>
<table class="table table-striped col-md-12" id="reviews">
	<thead>
		<th>Moviegoer</th>
		<th>Potatoes</th>
	</thead>
	<tbody>
<% @movie.reviews.each do |review| %>
	<%= render 'reviews/tr', review: review %>
<% end %>
	</tbody>
</table>
<%= link_to "Write a review", new_movie_review_path(@movie) %>
