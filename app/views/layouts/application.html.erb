<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>Rotten Potatoes!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= csrf_meta_tags %>
	<%= stylesheet_link_tag 'application' %>
	<%= javascript_include_tag 'application' %>
	<%= javascript_include_tag 'movie_list_filter' %>
	<%= javascript_include_tag 'movie_popup' %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="nav nav-pills">
      <ul class="nav">
        <li class="nav-item active">
          <a class="nav-link active" href="/movies">Rotten Potatoes!</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
      <footer>
		<b>user: <%= @current_user %></b>
	  </footer>
    </div>
  </body>
</html>
